{
    "name": "pgeon",
    "version": "0.0.1",
    "description": "Extension for node-postgres and static analyzer for SQL queries.",
    "license": "AGPL-3.0",
    "homepage": "https://github.com/inad9300/pgeon",
    "repository": {
        "type": "git",
        "url": "https://github.com/inad9300/pgeon"
    },
    "bugs": {
        "url": "https://github.com/inad9300/pgeon/issues"
    },
    "author": {
        "name": "Daniel MartÃ­n",
        "email": "inad9300@gmail.com"
    },
    "keywords": [
        "node-postgres",
        "postgres",
        "PostgreSQL",
        "SQL",
        "static analysis",
        "type safety",
        "TypeScript"
    ],
    "bin": "bin/cli.js",
    "main": "bin/$query.js",
    "types": "bin/$query.d.ts",
    "typings": "bin/$query.d.ts",
    "scripts": {
        "watch": "tsc --watch",
        "prepare": "tsc && chmod +x bin/cli.js",
        "test": "tsc && npm run test:query && npm run test:cli && npm run test:cli-scan",
        "test:query": "PGDATABASE=postgres node ./bin/\\$query.test.js",
        "test:cli": "PGDATABASE=postgres node ./bin/cli.test.js",
        "test:cli-scan": "PGDATABASE=postgres node ./bin/cli.js scan tests/"
    },
    "peerDependencies": {
        "pg": ">=7.5.0",
        "typescript": ">=3.1.6"
    },
    "devDependencies": {
        "@types/node": "12.7.5",
        "@types/pg": "7.11.1",
        "pg": "7.12.1",
        "typescript": "3.6.3"
    },
    "engines": {
        "node": ">=12.0.0"
    }
}
